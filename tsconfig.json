{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["vite/client", "vue"]
  },
  "include": [
    "pages/**/*.ts",
    "pages/**/*.d.ts",
    "pages/**/*.tsx",
    "pages/**/*.vue",
    "components/**/*.ts",
    "components/**/*.d.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "renderer/**/*.ts"
  ]
}